# ============================================
# KAPDA CO. - Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# DATABASE
# ============================================
# MongoDB Atlas connection string (recommended)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kapda-co?retryWrites=true&w=majority

# OR Local MongoDB (fallback)
# MONGODB_URI=mongodb://127.0.0.1:27017/kapda-co

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Generate a strong random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# ============================================
# CORS & CLIENT
# ============================================
CLIENT_URL=http://localhost:5173
# Production: CLIENT_URL=https://kapdaco.com

# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# FILE UPLOAD (Cloudinary)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds

RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window

# ============================================
# EMAIL SERVICE (Nodemailer - SendGrid/AWS SES)
# ============================================
# Required for order confirmations, password resets, and notifications
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
EMAIL_FROM=noreply@kapdaco.com

# ============================================
# PAYMENT GATEWAY (Razorpay)
# ============================================
# Required for processing payments
# Get keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# OR Stripe (International)
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

